{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "kurv-knowledgebase-2026/card-item",
	"title": "Card Item",
	"category": "design",
	"icon": "admin-page",
	"description": "Individual card item with icon, title, and description.",
	"keywords": ["card", "item", "content"],
	"textdomain": "kurv-knowledgebase-2026",
	"parent": ["kurv-knowledgebase-2026/card-manager"],
	"supports": {
		"html": false,
		"align": false,
		"anchor": true,
		"color": {
			"gradients": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"__experimentalDefaultControls": {
				"margin": true,
				"padding": true
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"width": true
			}
		},
		"dimensions": {
			"minHeight": true
		},
		"__experimentalSelector": ".wp-block-kurv-knowledgebase-2026-card-item"
	},
	"attributes": {
		"icon": {
			"type": "string",
			"default": "âš¡"
		},
		"title": {
			"type": "string",
			"default": "Card Title"
		},
		"titleLevel": {
			"type": "number",
			"default": 3
		},
		"content": {
			"type": "string",
			"source": "html",
			"selector": ".card-item-content"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
